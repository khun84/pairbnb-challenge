.modal.fade{"aria-hidden"=> "true", "aria-labelledby"=> "exampleModalLabel",
 role: "dialog", tabindex: "-1", id:'signup-modal'}
    .modal-dialog{role: "document"}
        .modal-content
            .modal-header
                %h5#exampleModalLabel.modal-title Sign Up
                %button.close{"aria-label"=> "Close", "data-dismiss"=> "modal", type: "button"}
                    %span{"aria-hidden"=> "true"} Ã—
            %form#signup-modal{action: sign_up_path, method:'post'}
                .modal-body
                    = token_tag

                    .form-group
                        %label.form-control-label{for: "name"} Name
                        %input#signup-name.form-control{type: "text", name:'name'}

                    .form-group
                        %label.form-control-label{for: "email"} Email
                        %input#signup-email.form-control{type: "text", name:'email'}

                    .form-group
                        %label.form-control-label{for: "message-text"} Password
                        %input#signup-user-password.form-control{type:'password', name:'password'}
                .modal-footer
                    %button.btn.btn-primary{type: "button", type:'submit', role:'button'} Sign Up