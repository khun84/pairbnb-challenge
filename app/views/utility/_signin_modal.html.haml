.modal.fade{"aria-hidden": "true", "aria-labelledby": "exampleModalLabel",
 role: "dialog", tabindex: "-1", id:'signin-modal'}
    .modal-dialog{role: "document"}
        .modal-content
            .modal-header
                %h5#exampleModalLabel.modal-title Sign In
                %button.close{"aria-label": "Close", "data-dismiss": "modal", type: "button"}
                    %span{"aria-hidden": "true"} Ã—
            %form{action:'#', method:'post'}
                .modal-body
                    = token_tag
                    .form-group
                        %label.form-control-label{for: "email"} Email
                        %input#email.form-control{type: "text", name:'email'}
                    .form-group
                        %label.form-control-label{for: "message-text"} Password
                        %input#user-password.form-control{type:'password', name:'password'}
                .modal-footer
                    %button.btn.btn-primary{type: "button", type:'submit', role:'button'} Sign In
                    %a.btn.btn-primary{href:'/auth/facebook', role:'button'} Sign In with Facebook
