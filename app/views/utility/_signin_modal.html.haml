.modal.fade{"aria-hidden"=> "true", "aria-labelledby"=> "exampleModalLabel",
 role: "dialog", tabindex: "-1", id:'signin-modal'}
    .modal-dialog{role: "document"}
        .modal-content
            .modal-header
                %h5#exampleModalLabel.modal-title Sign In
                %button.close{"aria-label"=> "Close", "data-dismiss"=> "modal", type: "button"}
                    %span{"aria-hidden"=> "true"} Ã—

            = form_for :session, url: sign_in_path do |f|
                .modal-body
                    .form-group
                    = f.label :email, class: 'form-control-label', for: 'email'
                    = f.text_field :email, class:'form-control', type:'text', id:'email'

                    .form-group
                    = f.label :password, class: 'form-control-label', for: 'message-text'
                    = f.password_field :password, class:'form-control', id:'user-password'
                .modal-footer
                    = f.submit 'Sign in', class:'btn btn-primary', role:'button'
                    %a.btn.btn-primary{href:'/auth/facebook', role:'button'} Sign In with Facebook
